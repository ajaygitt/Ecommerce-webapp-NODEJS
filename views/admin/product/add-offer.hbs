    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Add Offer</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                  {{#if products}}
                <form  class="tm-edit-product-form" method="POST" enctype="multipart/form-data" action="/create-offer">
                {{else}}
 <form  class="tm-edit-product-form" method="POST"  action="/create-offer-ByCategory">

                  {{/if}}

                 


{{#if products}}

  <div class="form-group mb-3">
                  <label
                      for="category"
                      >select a product to apply offer</label
                    >
                     
                    <select
                      class="custom-select tm-select-accounts"
                      id="product"
                      name="product">
                    
                  
                      <option selected>Select product</option>

                      
                      {{#each products}} 
                       <option value="{{this._id}}">{{this.name}}</option>
                     
                       {{/each}}
                    </select>
                   {{/if}}




{{#if category}}

  <div class="form-group mb-3">
                  <label
                      for="category"
                      >select a product to apply offer</label
                    >
                     
                    <select
                      class="custom-select tm-select-accounts"
                      id="category"
                      name="category">
                    
                  
                      <option selected>Select product</option>

                      
                      {{#each category}} 
                       <option value="{{this.category}}">{{this.category}}</option>
                     
                       {{/each}}
                    </select>
                   {{/if}}



                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="price"
                      >Discount percentage (in %)
                    </label>
                    <input
                      id="discount"
                      name="discount"
                      type="number"
                      class="form-control validate"
                      required
                    />
                  </div>


                   
                   <div class="form-group mb-3">
                  <label
                      for="category"
                      >valid from</label
                    >
                               

 <input id="datepicker" name="valid_from" width="270" />
                  </div>




     <div class="form-group mb-3">
                  <label
                      for="category"
                      >valid to</label >
    
 <input id="datepicker2" name="valid_to" width="270" />
   </div>

                 

</main>

 <div class="col-12">
